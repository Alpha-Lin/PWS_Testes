{% extends 'base.html.twig' %}

{% block title %}Teste{% endblock %}

{% block body %}
    <h1>{{teste.label}}</h1>

    <tr>
        <th>ImageTeste</th>
        <td>
            {% if teste.imageTeste %}
                <img class="imageTeste" src="{{ asset(uploaded_image ~ teste.imageTeste) }}" alt="image du teste image">
            {% else %}
                <img class="imageTeste" src="{{ asset(default_teste) }}" alt="avatar image" width="200">
            {% endif %}
        </td>
    </tr>

    <ul> <!-- Liste des questions -->
    {% for question in teste.questions %}
        <ul> <!-- Liste des solutions -->
            {% for solution in question.solutions %}
                <li>Solution {{ loop.index }} - {{ solution.nomSolution }} (id: {{ solution.id }}) </li>
                <ul>    
                    <li>Critère : {{ solution.critere.nomCritere }} (défaut : {{ solution.critere.scoreDefaut }}, max : {{ solution.critere.scoreMax }})</li>
                    <li>Points : {{ solution.point }} </li>
                </ul>
            {% endfor %}
        </ul>
    {% endfor %}
</ul>

    <div>
        <a href="{{ path('app_teste_index') }}">back to list</a>
        <a href="{{ path('app_teste_edit', {'id': teste.id}) }}">edit</a>
    </div>


    {{ include('teste/_delete_form.html.twig') }}
{% endblock %}
